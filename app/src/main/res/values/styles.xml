<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fragment_padding">
        <item name="android:paddingTop">@dimen/fragment_padding</item>
        <item name="android:paddingStart">@dimen/fragment_padding</item>
        <item name="android:paddingEnd">@dimen/fragment_padding</item>
    </style>

    <style name="article_title" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <style name="article_info" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="article_title" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/card_view_height</item>
        <item name="maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <style name="article_info" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>
    </style>
</resources>